<% if (items.length > 0) { %>
    <div class="main-header">
        <h1><%= title %></h1>
    </div>
    <div class="list">
        <% for (let item of items) {%>
            <div class="detail">
                <div class="elem-image">
                    <% if (item.photo !== undefined) { %>
                        <img src="/images/<%= item.photo %>" alt="item image">
                    <% } else { %>
                        <div class="no-image">No Image Available</div>
                    <% } %>
                </div>
                <div class="descriptions">
                    <div class="field-wrapper-name"><span class="field-label">Name: </span><%= item.name %></div>
                    <div class="field-wrapper-description"><span class="field-label">Price: </span><%= item.price %></div>
                    <div class="field-wrapper-stock"><span class="field-label">Number in Stock: </span><%= item.number_in_stock %></div>
                </div>
                <div class="write-operations">
                    <a href=<%= item.url %>> Show Details </a>
                </div>
            </div>
        <% } %>
    </div>
<% } else { %>
    <h1>There are no items.</h1>
<% } %>