<div class="main-header"><h1><%= category.name %></h1></div>
<div class="description">
    <div><p><%= category.description %></p></div>
</div>

<div class="main-header">
    <h2>Items</h2>
</div>

<div class="list">
    <% if (category.items.length > 0) { %>
        <% for (let item of category.items) {%>
            <div class="detail-div">
                <div class="detail">
                    <div class="elem-image">
                        <% if (item.photo !== undefined) { %>
                            <img src="/images/<%= item.photo %>" alt="item image">
                        <% } else { %>
                            <div class="no-image">No Image Available</div>
                        <% } %>
                    </div>
                    <div class="descriptions">
                        <div class="field-wrapper"><span class="field-label">Name: </span><%= item.name %></div>
                        <div class="field-wrapper"><span class="field-label">price: </span><%= item.price %></div>
                        <div class="field-wrapper"><span class="field-label">Number in Stock: </span><%= item.number_in_stock %></div>
                    </div>
                    <div class="write-operations">
                        <a href=<%= item.url %>> Show Details </a>
                    </div>
                </div>
            </div>
        <% } %>
    <% } else { %>
        <h3>This category doesn't have any items yet.</h3>
    <% } %>
</div>


<div class="write-operations">
    <a href=<%= category.url %>/update><button class="update">Update Category</button></a>
    <a href=<%= category.url %>/delete><button class="delete">Delete Category</button></a>
</div>

